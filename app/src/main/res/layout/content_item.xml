<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#27373c"
    app:cardElevation="2dp"
    android:layout_marginTop="12dp"
    app:layout_collapseParallaxMultiplier="1.0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:padding="16dp">


        <TextView
            android:id="@+id/lblThreadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="sans-serif"
            android:typeface="normal"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:textColor="#78b6a2" />

        <TextView
            android:id="@+id/lblUserCreatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblThreadTitle"
            tools:text="Subtitle"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="#568177"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-thin"
            android:paddingLeft="8dp" />

        <TextView
            android:id="@+id/lblThreadDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblUserCreatorName"
            tools:text="Content"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="#78b6a2"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/lblForumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblThreadDescription"
            tools:text="ForumName"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="#568177"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-thin"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/lblThreadResponses"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblThreadDescription"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-thin"
            android:textAlignment="viewStart"
            android:textColor="#568177"
            tools:text="Responses and Visits" />


    </RelativeLayout>
</android.support.v7.widget.CardView>